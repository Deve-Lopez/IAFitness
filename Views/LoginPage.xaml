<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:IAFitness.ViewModels"
             x:Class="IAFitness.Views.LoginPage"
             x:DataType="vm:LoginPageViewModel"
             Title="LoginPage"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="0.8*,0.2*">
        <!-- Imagen de fondo a pantalla completa -->
        <Image Source="fondoiafitness20.jpg" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill"
               Grid.RowSpan="2"/>

        <VerticalStackLayout Grid.Row="0" Margin="0,20,0,0">
            <Label Text="IA" FontSize="180" HorizontalOptions="Center"
                   TextColor="Yellow" FontFamily="Jumpshot" TranslationY="30">
                <Label.Shadow>
                    <Shadow Brush="Black" Offset="5,5" Radius="5"/>
                </Label.Shadow>
            </Label>
            <Label Text="Fitness" FontSize="75" HorizontalOptions="Center"
               TextColor="White" FontFamily="Jumpshot">
                <Label.Shadow>
                    <Shadow Brush="Black" Offset="5,5" Radius="5"/>
                </Label.Shadow>
            </Label>
            <!-- Eslogan animado -->
            <Label x:Name="EsloganLabel" Text="" FontFamily="Roboto" FontSize="18" TextColor="White" HorizontalOptions="Fill"
                   HorizontalTextAlignment="Center" Margin="0,30,0,0">
                <Label.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Radius="3"/>
                </Label.Shadow>
            </Label>
        </VerticalStackLayout>
        <!--Entry-->
        <Border Grid.Row="1" StrokeThickness="0" BackgroundColor="#99000000" Padding="10,10,10,0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,0,0"/>
            </Border.StrokeShape>
            <Grid RowDefinitions="*,*,*">
                <!--Registrate con Google-->
                <Border BackgroundColor="White" HeightRequest="50" VerticalOptions="Center" HorizontalOptions="Fill"
                    Grid.Row="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid>
                        <Image Source="googlelogo.png" VerticalOptions="Center" HorizontalOptions="Start" Aspect="AspectFill"
                           HeightRequest="30" WidthRequest="30" Margin="20,0,0,0"/>
                        <Label Text="Regístrate con Google" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"
                           FontSize="16" FontFamily="Roboto"/>
                    </Grid>
                </Border>
                <!--Registrate con email-->
                <Border BackgroundColor="White" HeightRequest="50" VerticalOptions="Center" HorizontalOptions="Fill"
                        Grid.Row="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding RegistrateAsyncCommand}"/>
                        </Grid.GestureRecognizers>
                        <Label Text="&#xe158;" FontFamily="MaterialIcons" VerticalOptions="Center" HorizontalOptions="Start"
                               TextColor="Black" FontSize="32" Margin="20,0,0,0"/>
                        <Label Text="Registrarse con Email" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"
                               FontSize="16" FontFamily="Roboto"/>
                    </Grid>
                </Border>
                <!--¿Tienes una cuenta?-->
                <HorizontalStackLayout Grid.Row="2" Margin="0,10,0,0" HorizontalOptions="Center">
                    <Label Text="¿Tienes una cuenta?" TextColor="White" FontFamily="Roboto" FontSize="15"/>
                    <Label Text="Iniciar Sesión" TextColor="CadetBlue" Margin="10,0,0,0" FontAttributes="Bold"
                       FontFamily="Roboto" FontSize="15">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IniciarSesionAsyncCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Grid>

        </Border>
    </Grid>
</ContentPage>